{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@girs"
        ]
    },
    "include": [
        "ambient.d.ts",
        "src/**/*.ts"
    ],
    "files": [
        "src/extension.ts",
        "src/prefs.ts"
    ]
}
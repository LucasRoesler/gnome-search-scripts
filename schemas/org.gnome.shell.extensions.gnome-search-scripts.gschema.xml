<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.gnome-search-scripts" path="/org/gnome/shell/extensions/gnome-search-scripts/">
    <key name="script-location" type="s">
      <default>'~/.config/gnome-search-scripts'</default>
      <summary>Script directory location</summary>
      <description>Directory where scripts are stored</description>
    </key>
    <key name="default-icon" type="s">
      <default>'system-run-symbolic'</default>
      <summary>Default script icon</summary>
      <description>Icon used for scripts without a specified icon</description>
    </key>
    <key name="default-notification-style" type="s">
      <default>'status'</default>
      <summary>Default notification style</summary>
      <description>How scripts notify by default (status, stdout, or none)</description>
    </key>
    <key name="refresh-scripts-trigger" type="i">
      <default>0</default>
      <summary>Trigger for refreshing scripts</summary>
      <description>Change this value to trigger script refreshing</description>
    </key>
  </schema>
</schemalist>
